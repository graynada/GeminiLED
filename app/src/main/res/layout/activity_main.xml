<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <!--Left panel-->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"/>

    <!--Centre container-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorGemini">

        <!--Top spacer-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"/>

        <!--LED line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:background="@android:color/black"
            android:gravity="center">

            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/colour_1"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/colour_2"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/colour_3"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/colour_4"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:id="@+id/colour_5"/>

        </LinearLayout>

        <!--App icon line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="60dp"
                android:id="@+id/icon_1"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="60dp"
                android:id="@+id/icon_2"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="60dp"
                android:id="@+id/icon_3"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="60dp"
                android:id="@+id/icon_4"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/icon_5"/>

        </LinearLayout>

        <!--App icon text line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/package_1"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/package_2"/>
            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/package_3"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/package_4"/>

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/package_5"/>

        </LinearLayout>

        <!--Bottom pane-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <Switch
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:id="@+id/kbledsw"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:switchMinWidth="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/kbledsw"
                android:layout_toEndOf="@+id/kbledsw"
                android:text="@string/keyboard_led_switch"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"/>

            <Switch
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:id="@+id/coverledsw"
                android:layout_above="@id/kbledsw"
                android:layout_alignParentLeft="true"
                android:switchMinWidth="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/coverledsw"
                android:layout_toEndOf="@+id/kbledsw"
                android:text="@string/cover_led_switch"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/settings"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/icons8_tune_50"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>